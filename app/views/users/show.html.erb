<div class="row">
  <div class="col-sm-12">
    <h2><%= @user.nickname %></h2>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <h3>Your movies</h3>
  </div>
  <div class="col-sm-4">
    <ul class="list-group">
      <% @user.orders.each do |order| %>
      <li class="list-group-item"><%= link_to order.movie.title, movie_url(order.movie) %> <%= order.purchase_option.quality %></li>
      <% end %>
    </ul>
  </div>
</div>